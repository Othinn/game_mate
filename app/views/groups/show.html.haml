%h1 Listing annoucements

%table
  %thead
    %tr
      %th Title
      %th Description
      %th City
      %th Exp date
      %th User
      %th Group
      %th
      %th
      %th

  %tbody
    - @group.annoucements.each do |annoucement|
      %tr
        %td= annoucement.title
        %td= annoucement.description
        %td= annoucement.city
        %td= annoucement.exp_date
        %td= annoucement.user.username
        %td= annoucement.group.group_name
        %td= link_to 'Show', annoucement
        - if current_user[:id] == annoucement.user_id
          %td= link_to 'Edit', edit_annoucement_path(annoucement)
          %td= link_to 'Destroy', annoucement, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Annoucement', new_annoucement_path

#new_annoucement
  = form_for @new_annoucement, remote: true do |f|
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :description
      = f.text_area :description, rows: 10, cols: 60
    .field
      = f.label :city
      = f.text_field :city
    .field
      = f.label :exp_date
      = f.date_select :exp_date
    .field
      = f.label :group
      =collection_select(:annoucement, :group_id, Group.all, :id, :group_name)
    .actions
      = f.submit 'Save'


