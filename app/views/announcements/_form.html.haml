= form_for @announcement, remote: true do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :exp_date
    = f.date_select :exp_date
  .field
    = f.label :group
    =collection_select(:announcement, :group_id, Group.all, :id, :group_name)
  .actions
    = f.submit 'Save'